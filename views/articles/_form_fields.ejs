<div class="col-md-12">
	<label class="form-label" for="title">Title</label>
	<input
		class="form-control"
		type="text"
		name="title"
		id="title"
		value="<%= article.title %>"
		required
	/>
</div>

<div class="col-md-12">
	<label class="form-label" for="description">Description</label>
	<textarea
		class="form-control"
		name="description"
		id="description"
		rows="2"
	><%= article.description %></textarea>
</div>

<div class="col-md-12">
	<label class="form-label" for="markdown">Markdown</label>
	<textarea
		class="form-control"
		name="markdown"
		id="markdown"
		rows="4"
		required
	><%= article.markdown %></textarea>
</div>

<div class="mt-4 col-12 d-flex justify-content-between align-items-baseline">
	<p class="w-75 text-danger"><%= locals.errors %></p>

	<div>
		<a class="btn" href="/">Cancel</a>
		<button class="btn btn-primary" type="submit">Save</button>
	</div>
</div>
