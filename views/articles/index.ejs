<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
			crossorigin="anonymous"
		/>
		<title>Blog</title>
	</head>
	<body>
		<div class="container mt-4">
			<div class="d-flex align-items-center justify-content-between">
				<h1>Blog Articles</h1>
				<a class="btn btn-success" href="/articles/new">New Article</a>
			</div>

			<% articles.forEach(article => { %>
				<div class="card mt-4">
					<div class="card-body">
						<h4 class="card-title"><%= article.title %></h4>
						<div class="card-text"><%= article.description %></div>
						<div class="card-subtitle text-muted mt-2">
							<%= article.createdAt.toLocaleDateString() %>
						</div>

						<div class="mt-2">
							<a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
							<a href="/articles/edit/<%= article.slug %>" class="btn btn-info">Edit</a>
							<form class="d-inline" action="/articles/delete/<%= article.id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger" type="submit">Delete</button>
							</form>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</body>
</html>
